<form action="/api/stories" method="POST" id="add_story">
    <div class="new_story">
        <div class="form-group">
            <label for="idNum" class="text-light">Id</label>
            <input type="hidden" name="id" value="">
            <input type="number" name="idNum" value ="" placeholder="1">
        </div>
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value ="" placeholder="John Appleseed">
        </div>
        <div class="form-group">
          <label for="condition" class="text-light">Condition</label>
          <input type="hidden" name="id" value="">
          <input type="text" name="condition" value ="" placeholder="Cancer">
      </div>
      <div class="form-group">
          <label for="dateAdded" class="text-light">Date Added</label>
          <input type="hidden" name="id" value="">
          <input type="date" name="dateAdded" value ="">
      </div>
      <div class="form-group">
          <label for="content" class="text-light">Content</label>
          <input type="hidden" name="id" value="">
          <input type="text" name="content" value ="" placeholder="This man is hurt.">
      </div>
      <div class="form-group">
          <label for="externalLink" class="text-light">External Link</label>
          <input type="hidden" name="id" value="">
          <input type="text" name="externalLink" value ="" placeholder="www.johnappleseed.com">
      </div>
      <div class="form-group">
          <button type="submit" class="btn text-dark update">Save</button>
      </div>
    </div>
  </form>