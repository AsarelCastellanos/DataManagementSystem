<!-- include header -->
<%- include('include/_header') %>

<main id="site-main">
  <div class="container">
    <div class="box-nav d-flex justify-between">
      <div class="filter">
        <a href="/">
          <i class="fas fa-angle-double-left"></i>
          All Stories
        </a>
      </div>
    </div>
    <div class="form-title text-center">
      <h2 class="text-dark">Update Story</h2>
      <span class="text-light"
        >Use the form bellow to update story.</span
      >
    </div>
    <form id="update_story" method="POST">
      <div class="new_story">
        <div class="form-group">
          <label for="idNum" class="text-light">ID</label>
          <input type="hidden" name="id" value="<%= story._id%>" />
          <input
            type="number"
            name="idNum"
            value=""
            placeholder="1"
          />
        </div>
        <div class="form-group">
          <label for="name" class="text-light">Name</label>
          <input type="hidden" name="id" value="<%= story._id%>" />
          <input
            type="text"
            name="name"
            value="<%= story.name%>"
            placeholder="John Appleseed"
          />
        </div>
        <div class="form-group">
          <label for="condition" class="text-light">Condition</label>
          <input type="hidden" name="id" value="<%= story._id%>" />
          <input type="text" name="condition" value="<%= story.condition%>" placeholder="Cancer" />
        </div>
        <div class="form-group">
          <label for="dateAdded" class="text-light">Date Added</label>
          <input type="hidden" name="id" value="<%= story._id%>" />
          <input type="date" name="dateAdded" value="<%= story.dateAdded%>" />
        </div>
        <div class="form-group">
          <label for="content" class="text-light">Content</label>
          <input type="hidden" name="id" value="<%= story._id%>" />
          <input
            type="text"
            name="content"
            value="<%= story.content%>"
            placeholder="This man is hurt."
          />
        </div>
        <div class="form-group">
          <label for="externalLink" class="text-light">External Link</label>
          <input type="hidden" name="id" value="<%= story._id%>" />
          <input
            type="text"
            name="externalLink"
            value="<%= story.externalLink%>"
            placeholder="www.johnappleseed.com"
          />
        </div>
        <div class="form-group">
          <button type="submit" class="btn text-dark update">Save</button>
        </div>
      </div>
    </form>
  </div>
</main>

<!-- include footer -->
<%- include('include/_footer') %>
